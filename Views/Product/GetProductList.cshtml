
@model IEnumerable<Project.Models.Product>

@{
    ViewBag.Title = "GetProductList";
}

<br />
<h2 class="text-center">Product List</h2>

<br />
<table class="table">
    <tr>
        <th>
            Product ID
        </th>
        <th>
            Name
        </th>
        <th>
            Price
        </th>
        <th>
            Delivery Charges
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryCharges)
            </td>
        </tr>
    }

</table>
